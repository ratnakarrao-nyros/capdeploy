<% title "Display #{@setting.name}" %>

<p><small><%= "Display total #{@setting.preferences.count} settings" %></small></p>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
    <% @setting.preferences.try(:each) do |key, value| %>
      <tr>
        <td><%= key %></td>
        <td><%= value %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to 'Edit', edit_admins_settings_path, :class => 'btn btn-warning' %>
</div>
