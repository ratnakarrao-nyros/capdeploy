<% title "List of forum categories" %>

<% content_for :head do %>
  <%= javascript_include_tag "index_dataTables" %>
<% end %>

<table class="table table-bordered table-striped table-hover datatable" data-source="<%= admins_forum_categories_url(format: "json") %>">
  <thead>
    <tr>
      <th>Title</th>
      <th>State</th>
      <th>Position</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to 'New item', new_admins_forum_category_path, :class => 'btn btn-primary' %>
</div>
