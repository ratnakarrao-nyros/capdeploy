<% title "Create new forum category" %>

<% content_for :sidebar do %>
  <%= render "shared/error_messages", :target => @forum_category %>
<% end %>

<%= simple_form_for [:admins, @forum_category], :method => :post, :url => admins_forum_categories_path, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <fieldset>
    <%= f.input :title, :input_html => { :class => 'span7' } %>
    <%= f.input :state %>
    <%= f.input :position %>
  </fieldset>
  <%= f.error :base %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to "Cancel", admins_forum_categories_path, :class => 'btn' %>
  </div>
<% end %>
