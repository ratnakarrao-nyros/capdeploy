<tr>
  <td colspan="2">
    <div class="accordion">
      <div class="accordion-group">
        <div class="accordion-heading">
          <a class="accordion-toggle" data-toggle="collapse" href="#items">
            <i class="icon-plus"></i> List of items
          </a>
        </div>
        <div id="items" class="accordion-body collapse">
          <div class="accordion-inner">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Listing ID</th>
                  <th>Order No</th>
                  <th>Image</th>
                  <th>Name</th>
                  <th>Item votes</th>
                  <th>Number of Comments</th>
                </tr>
              </thead>
              <tbody>
                <% for listing in @list.listings %>
                  <tr>
                    <td><span class="badge"><%= listing.id %></span></td>
                    <td><%= listing.position %></td>
                    <td>
                      <a class="thumbnail">
                        <% if listing.item.image? %>
                          <%= image_tag(listing.item.image.thumb.url) %>
                        <% else %>
                          <%= image_tag "no-image.jpg", :size => "45x30" %>
                        <% end %>
                      </a>
                    </td>
                    <td><%= link_to listing.item.name, admins_item_path(listing.item) %></td>
                    <td><span class="badge badge-info"><%= listing.reputation_for(:item_votes) %></span></td>
                    <td><span class="badge badge-info"><%= listing.comments.count %></span></td>
                  </tr>
                  <%= render 'item_comments', :listing => listing unless listing.comments.empty? %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </td>
</tr>
