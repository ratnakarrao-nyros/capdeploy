<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :id => "modal_auth_sign_in" }, :remote => true ) do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Please Sign-in</h3>
  </div>
  <div class="row-fluid modal-body">
    <div class="span6">
      <%= f.input :email, :required => false, :label => false, :placeholder => "Email address" %>
      <%= f.input :password, :required => false, :label => false, :placeholder => "Password" %>
      <%= f.input :remember_me, :as => :boolean, :wrapper => :checkbox if devise_mapping.rememberable? %>
    </div>
    <div class="span5">
      <%= render "shared/users_devise_links" %>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.button :submit, "Sign in", :id => "myButton", :class => "btn-primary" %>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
<% end %>
