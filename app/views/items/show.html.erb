<% title @item.name %>

<div class="row">
  <div class="span7">
    <div class="row">
      <div class="span2">
        <a class="thumbnail">
          <% unless @item.image.blank? %>
            <%= image_tag @item.image.big.url, :style => "width:160px;height:120px;" %>
          <% else %>
            <%= image_tag "no-image.jpg", :style => "width:160px;height:120px;" %>
          <% end %>
        </a>
      </div>
      <div class="span5">
        <blockquote>
          <% unless @item.description.blank? %>
            <%= @item.description %>
          <% else %>
            <i>Description none</i>
          <% end %>
        </blockquote>
      </div>
      <div class="span7">
        <h4><strong>Recent Lists</strong></h4>
        <ul>
          <% @item.recent_lists.each do |list| %>
            <li><strong><%= link_to list.name, users_list_path(list) %></strong></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
